<?xml version="1.0" ?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="articulated_lidar" params="prefix">
    <!-- Link List -->
    <link name="${prefix}base_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://euler_support/meshes/visual/dynamixel_m54-40-s250-r.stl"/>
        </geometry>
        <material name="gray">
          <color rgba="0.75 0.75 0.75 1"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://euler_support/meshes/visual/dynamixel_m54-40-s250-r.stl"/>
        </geometry>
        <material name="gray"/>
      </collision>
    </link>
    <link name="${prefix}link_1">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://euler_support/meshes/visual/scanner_bracket.stl"/>
        </geometry>
        <material name="silver">
          <color rgba="0.2 0.2 0.2 1"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://euler_support/meshes/visual/scanner_bracket.stl"/>
        </geometry>
        <material name="silver"/>
      </collision>
    </link>
    <link name="${prefix}link_2">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://euler_support/meshes/visual/pf_r2000.stl"/>
        </geometry>
        <material name="green">
          <color rgba="0.15 0.415 0.165 1"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://euler_support/meshes/visual/pf_r2000.stl"/>
        </geometry>
        <material name="green"/>
      </collision>
    </link>
    <link name="${prefix}scan"/>
    <!-- Joint List -->
    <joint name="${prefix}joint_1" type="revolute">
      <parent link="${prefix}base_link"/>
      <child link="${prefix}link_1"/>
      <origin xyz="0 0 0.108" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="-${2*pi}" upper="${2*pi}" effort="0" velocity="${23.8*2.0*pi/60.0}"/>
    </joint>
    <joint name="${prefix}joint_2" type="fixed">
      <parent link="${prefix}link_1"/>
      <child link="${prefix}link_2"/>
      <origin xyz="0.068660 0 0.075317" rpy="0 -${radians(45)} 0"/>
    </joint>
    <joint name="${prefix}joint_3" type="fixed">
      <parent link="${prefix}link_2"/>
      <child link="${prefix}scan"/>
      <origin xyz="0 0 0.0971" rpy="0 0 0"/>
    </joint>
  </xacro:macro>
</robot>
